extends base.pug

block scripts
    include ../static/index.js

block style
    style
        include ../static/style.css
        include ../static/stylecontact.css
        <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">

block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myInput", name="name", id="name", placeholder="Enter Your Name")
            input(type="email", class="myInput", name="email", id="email", placeholder="Enter Your email id")
            input(type="number", class="myInput", name="phone", id="phone", placeholder="Enter Your phone number")
            input(type="text", class="myInput", name="address", id="address", placeholder="Enter Your address")
            input(type="text", class="myInput", name="desc", id="desc", placeholder="Enter Your concern")
            button.btn
                | Submit